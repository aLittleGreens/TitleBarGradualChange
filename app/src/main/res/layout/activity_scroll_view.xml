<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ifreecomm.titlebargradualchange.ScrollViewActivity">

    <com.ifreecomm.titlebargradualchange.widget.ObservableScrollView
        android:id="@+id/sv_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tv_main_topContent"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@mipmap/head" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="650dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="我是内容"
                android:textSize="22sp" />

        </LinearLayout>
    </com.ifreecomm.titlebargradualchange.widget.ObservableScrollView>

    <include layout="@layout/include_header_layout" />

</RelativeLayout>
